html, body
  height 670px
  //background-color #3396d1
  background-color #60B5CC
  font-family 'Open Sans'

.container
  background-color #e9e9e9
  padding 30px 40px 0px 40px
  max-width 750px
  list-style-type none


#header
  display flex
  height 60px
  width 100%
  align-items center
  justify-content center

  .nav
    height 100%
    width 100px
    text-align center
    font-size 20px
    padding auto

