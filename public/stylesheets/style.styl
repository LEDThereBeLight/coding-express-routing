[type="radio"].option
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px




[type="radio"].option + span
  display block


/* the basic, unchecked style */
[type="radio"].option + spanbefore
  content ''
  display inline-block
  width 16px
  height  16px
  vertical-align 0em
  border-radius 1em
  box-shadow 0 0 0 0.15em #eee
  margin-right 8px
  transition 0.5s ease all


/* the checked style using the checked pseudo class */
[type="radio"]checked.option + spanbefore
  background #457fca
  box-shadow 0 0 0 0.25em #eee


/* never forget focus styling */
[type="radio"]focus.option + spanafter
  font-size 1.5em
  line-height 1
  vertical-align -0.125em


