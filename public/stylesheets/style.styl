ul.option
  display flex
  list-style-type none
  justify-content space-between
  margin 0 10px
  height 100%


li.option
  align-self center
  border-radius 10px
  border 2px solid #eee
  color #999
  width 200px
  height 200px


input[type=radio].option
  padding 10px
  margin 0 8px 0 2px
  border 2px solid #eee


span.number
  font-size 16px




[type="radio"].option
  border 0
  clip rect(0 0 0 0)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px




[type="radio"].option + span
  display block


/* the basic, unchecked style */
[type="radio"].option + spanbefore
  content ''
  display inline-block
  width 16px
  height  16px
  vertical-align 0em
  border-radius 1em
  box-shadow 0 0 0 0.15em #eee
  margin-right 8px
  transition 0.5s ease all


/* the checked style using the checked pseudo class */
[type="radio"]checked.option + spanbefore
  background #457fca
  box-shadow 0 0 0 0.25em #eee


/* never forget focus styling */
[type="radio"]focus.option + spanafter
  font-size 1.5em
  line-height 1
  vertical-align -0.125em


label.option
  padding 12px
  display inline-block
  cursor pointer
  position relative


span.optionText
  font-size 20px
  position absolute
  bottom 11px
  left 55px



div.optionImage
  margin-bottom 5px


